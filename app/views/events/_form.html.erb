<%= simple_nested_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date, label: 'ದಿನಾಂಕ' %>
    <%= f.input :start_time, label: 'ಪ್ರಾರಂಭ ಸಮಯ' %>
    <%= f.input :end_time, label: 'ಮುಕ್ತಾಯ ಸಮಯ ' %>
    <%= f.input :name, label: 'ಕಾರ್ಯಕ್ರಮದ ಹೆಸರು' %>
    <%= f.input :regional_name_value, placeholder: "ಕನ್ನಡದಲ್ಲಿ ಹೆಸರು", label: "ಕನ್ನಡದಲ್ಲಿ ಹೆಸರು", input_html: { value: (f.object.regional_name_name rescue "") } %>
    <%= f.input :venue, label: 'ಕಾರ್ಯಕ್ರಮ ನಡೆಯುವ ಸ್ಥಳ' %>
    <%= f.input :details, label: 'ಕಾರ್ಯಕ್ರಮದ ವಿವರ' %>
    <%= f.input :remarks, label: 'ಷರಾ' %>
    <hr/>
    <%= render "shared/image_uploader", f: f %>    
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
