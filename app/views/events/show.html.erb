<% @module_name = "ದಿನಂಪ್ರತಿ ಕಾರ್ಯಕ್ರಮಗಳು > ವಿವರ" %>
<div class="container table-responsive">
  <table class="table table-striped table-hover">
    <tr>
      <td><strong>ಕಾರ್ಯಕ್ರಮಗಳು:</strong></td>
      <td><%= @event.rgnl_name %></td>
    </tr>
    <tr>
      <td><strong>ಹೆಸರು:</strong></td>
      <td><%= @event.name %></td>
    </tr>
    <tr>
      <td><strong>ಕಾರ್ಯಕ್ರಮದ ವಿವರ:</strong></td>
      <td><%= @event.details %></td>
    </tr>
    <tr>
      <td><strong>ಕಾರ್ಯಕ್ರಮ ನಡೆಯುವ ಸ್ಥಳ:</strong></td>
      <td><%= @event.venue %></td>
    </tr>
    <tr>
      <td><strong>ದಿನಾಂಕ:</strong></td>
      <td><%= @event.date.strftime("%d-%m-%Y") %></td>
    </tr>
    <tr>
      <td><strong>ಪ್ರಾರಂಭ ಸಮಯ:</strong></td>
      <td><%= @event.start_time %></td>
    </tr>
    <tr>
      <td><strong>ಮುಕ್ತಾಯ ಸಮಯ :</strong></td>
      <td><%= @event.end_time %></td>
    </tr>
    <tr>
      <td><strong>ಷರಾ:</strong></td>
      <td><%= @event.remarks %></td>
    </tr>
    <tr>
      <td><strong>ದಾಖಲೆ ಲಗತ್ತಿಸು:</strong></td>
      <td>
        <div class="list-group">
          <% @event.stored_files.each do |d| %>
            <%= link_to d.document_url, class: "list-group-item" do %>
              <%= d.document.file.filename %> : <%= d.desc %>
            <% end %>
          <% end %>
        </div>
      </td>
    </tr>
  </table>
</div>

<div class="container mt-5">
  <h5 class="alert alert-success"> ಪೋಟೋ ಲಗತ್ತಿಸು </h5>
  <div class="row">
    <% @event.stored_images.each do |i| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="card" style="width: 20rem;">
          <%= image_tag i.image_url(:thumb), class: "card-img-top img-thumbnail", style: "padding:5px;" %>
          <div class="card-body"><%= i.desc %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
