<div class="container table-responsive">
  <table class="table table-striped table-hover">
    <tr>
      <td><strong>ಸ್ಥಳ</strong></td>
      <td><%= @feedback.place.panch_name %></td>
    </tr>
    <tr>
      <td><strong>ಇಲಾಖೆ</strong></td>
      <td><%= @feedback.department.rgnl_name rescue "NA" %></td>
    </tr>
    <tr>
      <td><strong>ದೂರು/ಬೇಡಿಕೆ/ಸಲಹೆ ಸಲ್ಲಿಸಿದವರ ಹೆಸರು</strong></td>
      <td><%= @feedback.user.name_phone rescue "NA" %></td>
    </tr>
    <tr>
      <td><strong>ದೂರು/ಬೇಡಿಕೆ/ಸಲಹೆ ವಿಧ</strong></td>
      <td><%= @feedback.feedback_type %></td>
    </tr>
    <tr>
      <td><strong>ಟೈಟಲ್:</strong></td>
      <td><%= @feedback.rgnl_name %> <br/> <%= @feedback.name %></td>
    </tr>
    <tr>
      <td><strong>ಹೆಚ್ಚಿನ ವಿವರ:</strong></td>
      <td><%= @feedback.details %></td>
    </tr>
    <tr>
      <td><strong>ರಚಿಸಿದ ದಿನಾಂಕ:</strong></td>
      <td><%= @feedback.created_at.strftime("%d-%m-%Y at %H:%m") %></td>
    </tr>
    <tr>
      <td><strong>ಹಾಲಿ ಸ್ಥಿತಿ :</strong></td>
      <td><%= @feedback.entity_status.rgnl_name rescue "NA" %></td>
    </tr>
    <tr>
      <td><strong>ತೆಗೆದುಕೊಂಡ ಕ್ರಮ:</strong></td>
      <td><%= @feedback.action_taken %></td>
    </tr>
    <tr>
      <td><strong>ದಾಖಲೆ ಲಗತ್ತಿಸು:</strong></td>
      <td>
        <div class="list-group">
          <% @feedback.stored_files.each do |d| %>
            <%= link_to d.document_url, class: "list-group-item" do %>
              <%= d.document.file.filename %> : <%= d.desc %>
            <% end %>
          <% end %>
        </div>
      </td>
    </tr>
  </table>
</div>

<div class="container mt-5">
  <h5 class="alert alert-success"> ಪೋಟೋ ಲಗತ್ತಿಸು </h5>
  <div class="row">
    <% @feedback.stored_images.each do |i| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="card" style="width: 20rem;">
          <%= image_tag i.image_url(:thumb), class: "card-img-top img-thumbnail", style: "padding:5px;" %>
          <div class="card-body"><%= i.desc %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
