<% place_path = @place.new_record? ? create_entity_districts_path : update_entity_district_path(@place) %>
<%= simple_form_for(@place, url: place_path) do |f| %>
<%= hidden_field_tag :entity_type, "Place" %>
<%= f.input :place_type, collection: Place::VALID_TYPES.values, required: true %>
<%= f.input :regional_name_value, placeholder: "ಕನ್ನಡದಲ್ಲಿ ಹೆಸರು", label: "ಕನ್ನಡದಲ್ಲಿ ಹೆಸರು", input_html: { value: (f.object.regional_name_name rescue "") } %>
<%= f.input :name, required: true %>
<%= f.input :code, required: true %>
<%= f.input :internal, label: "For Party Work only?" %>
<%= f.input :panchayat_id, as: :hidden if @place.new_record? %>
<%= f.button :submit, class: "btn btn-success btn-block" %>
<% end %>
