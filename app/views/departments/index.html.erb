<% @module_name = "ಇಲಾಖೆ" %>
<div class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <%= link_to 'ಹೊಸ ಇಲಾಖೆ', new_department_path, id: :new_dept, remote: true, class: "btn btn-primary" if current_user.admin? %>
          <hr />
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>ಹೆಸರು</th>

                  <th>ಇ.ಮೇಲ್</th>
                  <th>ಪೋನ್‌ ನಂಬರ</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @departments.each do |department| %>
                <tr>
                  <td>
                    <%= department.rgnl_name %>
                  </td>
                  <td>
                    <%= department.email %>
                  </td>
                  <td>
                    <%= department.phone %>
                  </td>
                  <td>
                    <div class="d-flex float-right" role="group" %>
                      <%= link_to icon('fas', 'edit'), edit_department_path(department), remote: true, class: "btn btn-info btn-sm m-1" %>
                      <%= link_to icon('fas', 'times'), department, method: :delete, remote: true, data: { confirm: 'ನೀವು ಅಳಿಸಲು ಖಚಿತವಾಗಿ ಬಯಸುವಿರಾ??' }, class: "btn btn-danger btn-sm m-1" %>
                    </div>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= render "shared/modal" %>
        </div>
      </div>
    </div>
  </div>
</div>
